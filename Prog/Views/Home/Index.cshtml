@{
    ViewData["Title"] = "AgriEnergyConnect - Connecting Farmers and Energy Solutions";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-4">AgriEnergyConnect</h1>
            <p class="lead">Empowering farmers with sustainable energy solutions while connecting them to markets.</p>
            <hr class="my-4">
            <p>Join our platform to manage your agricultural products and contribute to renewable energy initiatives.</p>
            <div class="mt-4">
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg me-2">Login</a>
                <a href="#about" class="btn btn-outline-secondary btn-lg">Learn More</a>
            </div>
        </div>
        <div class="col-md-6">
            <img src="/images/farm-energy.jpg" alt="Sustainable Farming" class="img-fluid rounded shadow">
        </div>
    </div>
</div>